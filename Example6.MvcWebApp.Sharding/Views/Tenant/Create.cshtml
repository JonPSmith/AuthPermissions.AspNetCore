@model Example6.MvcWebApp.Sharding.Models.SingleLevelTenantDto

@{
    ViewData["Title"] = "Create";
}

<h1>Create Tenant</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="TenantName" class="control-label"></label>
                <input asp-for="TenantName" class="form-control" />
                <span asp-validation-for="TenantName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Tenant Roles</label>
                <br/>
                <div>
                    @Html.ListBoxFor(model => model.TenantRolesName,
                        new MultiSelectList(Model.AllPossibleRoleNames),
                        new { @class = "form-control", multiple = "multiple", id = "roleNames_dropdown" })
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
